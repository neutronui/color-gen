:where(:root),
.{{ semantic }}-{{ palette }} {
  $tones
  
  --color-{{ semantic }}: var(--{{ palette }});

  --color-{{ semantic }}-lt-50: var(--color-{{ palette }}-lt-50);
  --color-{{ semantic }}-gte-50: var(--color-{{ palette }}-gte-50);
  --color-{{ semantic }}-lt-60: var(--color-{{ palette }}-lt-60);
  --color-{{ semantic }}-gte-60: var(--color-{{ palette }}-gte-60);
  --color-{{ semantic }}-lt-70: var(--color-{{ palette }}-lt-70);
  --color-{{ semantic }}-gte-70: var(--color-{{ palette }}-gte-70);

  --color-{{ semantic }}-max-50: var(--color-{{ palette }}-max-50);
  --color-{{ semantic }}-min-50: var(--color-{{ palette }}-min-50);
  --color-{{ semantic }}-max-60: var(--color-{{ palette }}-max-60);
  --color-{{ semantic }}-min-60: var(--color-{{ palette }}-min-60);
  --color-{{ semantic }}-max-70: var(--color-{{ palette }}-max-70);
  --color-{{ semantic }}-min-70: var(--color-{{ palette }}-min-70);

  --color-{{ semantic }}-on: var(--color-{{ palette }}-on);
}